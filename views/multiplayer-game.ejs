<%- include("partials/header") -%>
<main>
    <input type="hidden" id="player-number" value=<%= playerNumber %>>
    <input type="hidden" id="nickname" value=<%= nickname %>>
    <% if(joinGame) { %>
        <input type="hidden" id="game-code" value=<%= gameCode %>>
    <% } %>
    <div id="game-screen">
        <%- include('partials/multiplayer-settings') -%>
        <div class="grid-container">
            <h1 id="countdown"></h1>
            <h1 id="game-message"></h1>
            <canvas id="canvas"></canvas>
            <div id="game-code-div">
                <p id="your-game-code" class="text-info"></p>
                <p class="text-info">controls: ← ↑ → ↓</p>
            </div>
        </div>
        <%- include('partials/game-chat') -%>
        <%- include('partials/mobile-controls') -%>
        
        <!-- Only visible on portrait -->
        <button id="mobile-settings-trigger" class="lobby-btn">Settings</button>
        <button id="mobile-chat-trigger" class="lobby-btn">Chat</button>
        <button id="mobile-start-game-btn" class="lobby-btn">Start game</button>

    </div>
</main>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/gameplay/multiplayer.js" type="module"></script>

<%- include("partials/footer") -%>